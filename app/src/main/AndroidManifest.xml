<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.stormstockmarket">

    <uses-permission android:name = "android.permission.VIBRATE"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <!-- splash activity -->
        <activity
            android:name=".SplashActivity"
            android:theme="@style/SplashTheme"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- help activity -->
        <activity android:name=".Help1Activity"/>
        <activity android:name=".Help2Activity"/>
        <activity android:name=".Help3Activity"/>
        <activity android:name=".Help4Activity"/>
        <activity android:name=".Help5Activity"/>
        <activity android:name=".Help6Activity"/>

        <!-- main activity -->
        <activity android:name=".MainActivity"/>

    </application>

</manifest>