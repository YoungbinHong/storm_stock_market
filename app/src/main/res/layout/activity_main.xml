<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">



    <TableLayout
        android:id="@+id/tableLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:stretchColumns="*"
        tools:ignore="MissingConstraints">

        <TableRow>

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="wrap_content"
                android:layout_height="100dp"
                android:layout_marginTop="20dp"
                app:srcCompat="@drawable/mosunpi" />
        </TableRow>

        // Row 항목

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#999999">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="4"
                android:gravity="center"
                android:padding="4pt"
                android:text="종목"
                android:textColor="#FFFFFF"
                android:textSize="5pt" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:gravity="center"
                android:padding="4pt"
                android:text="이전가"
                android:textColor="#FFFFFF"
                android:textSize="5pt" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:gravity="center"
                android:padding="4pt"
                android:text="현재가"
                android:textColor="#FFFFFF"
                android:textSize="5pt" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="5"
                android:gravity="center"
                android:padding="4pt"
                android:text="등락률"
                android:textColor="#FFFFFF"
                android:textSize="5pt" />
        </TableRow>

        // Row 단절통신

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FFFFFF">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="4"
                android:background="#c08000"
                android:gravity="center"
                android:padding="4pt"
                android:text="단절통신"
                android:textColor="#FFFFFF"
                android:textSize="5pt" />

            <TextView
                android:id="@+id/단절통신이전가"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:background="#FFFFFF"
                android:gravity="center"
                android:padding="4pt"
                android:text=""
                android:textColor="#000000"
                android:textSize="5pt" />

            <TextView
                android:id="@+id/단절통신현재가"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:background="#FFFFFF"
                android:gravity="center"
                android:padding="4pt"
                android:text=""
                android:textColor="#000000"
                android:textSize="5pt" />

            <TextView
                android:id="@+id/단절통신등락률"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="5"
                android:background="#FFFFFF"
                android:gravity="center"
                android:padding="4pt"
                android:text=""
                android:textColor="#000000"
                android:textSize="5pt" />
        </TableRow>

        // Row 사망생명

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FFFFFF">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="4"
                android:background="#504028"
                android:gravity="center"
                android:padding="4pt"
                android:text="사망생명"
                android:textColor="#FFFFFF"
                android:textSize="5pt" />

            <TextView
                android:id="@+id/사망생명이전가"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:gravity="center"
                android:padding="4pt"
                android:text=""
                android:textColor="#000000"
                android:textSize="5pt" />

            <TextView
                android:id="@+id/사망생명현재가"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:gravity="center"
                android:padding="4pt"
                android:text=""
                android:textColor="#000000"
                android:textSize="5pt" />

            <TextView
                android:id="@+id/사망생명등락률"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="5"
                android:gravity="center"
                android:padding="4pt"
                android:text=""
                android:textColor="#000000"
                android:textSize="5pt" />
        </TableRow>

        // Row 석기전자

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FFFFFF">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="4"
                android:background="#003030"
                android:gravity="center"
                android:padding="4pt"
                android:text="석기전자"
                android:textColor="#FFFFFF"
                android:textSize="5pt" />

            <TextView
                android:id="@+id/석기전자이전가"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:gravity="center"
                android:padding="4pt"
                android:text=""
                android:textColor="#000000"
                android:textSize="5pt" />

            <TextView
                android:id="@+id/석기전자현재가"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:gravity="center"
                android:padding="4pt"
                android:text=""
                android:textColor="#000000"
                android:textSize="5pt" />

            <TextView
                android:id="@+id/석기전자등락률"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="5"
                android:gravity="center"
                android:padding="4pt"
                android:text=""
                android:textColor="#000000"
                android:textSize="5pt" />
        </TableRow>

        // Row 지진건설

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FFFFFF">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="4"
                android:background="#308000"
                android:gravity="center"
                android:padding="4pt"
                android:text="지진건설"
                android:textColor="#FFFFFF"
                android:textSize="5pt" />

            <TextView
                android:id="@+id/지진건설이전가"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:gravity="center"
                android:padding="4pt"
                android:text=""
                android:textColor="#000000"
                android:textSize="5pt" />

            <TextView
                android:id="@+id/지진건설현재가"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:gravity="center"
                android:padding="4pt"
                android:text=""
                android:textColor="#000000"
                android:textSize="5pt" />

            <TextView
                android:id="@+id/지진건설등락률"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="5"
                android:gravity="center"
                android:padding="4pt"
                android:text=""
                android:textColor="#000000"
                android:textSize="5pt" />
        </TableRow>

        // Row 파산은행

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FFFFFF">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="4"
                android:background="#c83000"
                android:gravity="center"
                android:padding="4pt"
                android:text="파산은행"
                android:textColor="#FFFFFF"
                android:textSize="5pt" />

            <TextView
                android:id="@+id/파산은행이전가"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:gravity="center"
                android:padding="4pt"
                android:text=""
                android:textColor="#000000"
                android:textSize="5pt" />

            <TextView
                android:id="@+id/파산은행현재가"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:gravity="center"
                android:padding="4pt"
                android:text=""
                android:textColor="#000000"
                android:textSize="5pt" />

            <TextView
                android:id="@+id/파산은행등락률"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="5"
                android:gravity="center"
                android:padding="4pt"
                android:text=""
                android:textColor="#000000"
                android:textSize="5pt" />
        </TableRow>

    </TableLayout>






</androidx.constraintlayout.widget.ConstraintLayout>

